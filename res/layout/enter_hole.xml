<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView android:fillViewport="true"
        android:layout_width="fill_parent" android:layout_height="fill_parent">
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical">
            
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="Par"></TextView>
            <EditText android:layout_height="wrap_content"
                android:layout_width="match_parent" android:inputType="number"
                android:hint="Par here..."></EditText>
            
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="Yardage"></TextView>
            <EditText android:layout_height="wrap_content"
                android:layout_width="match_parent" android:inputType="number"
                android:hint="Yardage here..."></EditText>
            
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="Score"></TextView>
            <EditText android:layout_height="wrap_content"
                android:layout_width="match_parent" android:inputType="number"
                android:hint="Score here..."></EditText>
                   
            
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:includeFontPadding="true"
                android:text="Drive Distance"></TextView>
            <EditText android:layout_height="wrap_content"
                android:layout_width="match_parent" android:inputType="numberDecimal"
                android:hint="Drive Distance here..."></EditText>


            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="Putts"></TextView>
            <EditText android:layout_height="wrap_content"
                android:layout_width="match_parent" android:inputType="number"
                android:hint="Putts here..."></EditText>
                
            
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Did you hit the fairway?"></TextView>
            <RadioGroup android:id="@+id/fairwayHit" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <RadioButton android:id="@+id/yesFwy" android:layout_height="wrap_content" android:text="Yes" android:layout_width="wrap_content" android:checked="true"></RadioButton>
                <RadioButton android:id="@+id/noFwy" android:layout_height="wrap_content" android:text="No" android:layout_width="wrap_content"></RadioButton>
            </RadioGroup>
            
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Did you hit the green?"></TextView>
            <RadioGroup android:id="@+id/greenHit" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <RadioButton android:id="@+id/yesGreen" android:layout_height="wrap_content" android:text="Yes" android:layout_width="wrap_content" android:checked="true"></RadioButton>
                <RadioButton android:id="@+id/noGreen" android:layout_height="wrap_content" android:text="No" android:layout_width="wrap_content"></RadioButton>
            </RadioGroup>
            

            <LinearLayout>
                <Button android:id="@+id/Enter_Round"
                    android:text="Enter Round"
                    android:layout_width="fill_parent" android:layout_height="100dp"
                    android:gravity="center" />
                <Button android:id="@+id/Cancel_round_input"
                    android:text="Cancel"
                    android:layout_width="fill_parent" android:layout_height="100dp"
                    android:gravity="center" />
            </LinearLayout>
            
        </LinearLayout>
    </ScrollView>
</LinearLayout>